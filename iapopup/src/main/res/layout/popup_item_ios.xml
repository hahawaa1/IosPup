<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:background="#11000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <TextView
            android:background="@drawable/popup_ios_top_bg"
            android:gravity="center"
            android:id="@+id/popup_ios_top"
            android:textSize="16sp"
            android:textColor="#007AFF"
            android:text="拍照"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:visibility="gone"
            android:id="@+id/popup_view_first"
            style="@style/view_Line"/>

        <TextView
            android:visibility="gone"
            android:background="@drawable/popup_ios_mid_bg"
            android:gravity="center"
            android:id="@+id/popup_ios_first"
            android:textSize="16sp"
            android:textColor="#007AFF"
            android:text="我是中间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:visibility="gone"
            android:id="@+id/popup_view_second"
            style="@style/view_Line"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/popup_ios_second"
            android:background="@drawable/popup_ios_mid_bg"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#007AFF"
            android:text="我是中间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/popup_view_third"
            style="@style/view_Line"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/popup_ios_third"
            android:background="@drawable/popup_ios_mid_bg"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#007AFF"
            android:text="我是中间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            style="@style/view_Line"/>

        <TextView
            android:background="@drawable/popup_ios_bottom_bg"
            android:gravity="center"
            android:id="@+id/popup_ios_bottom"
            android:textSize="16sp"
            android:textColor="#007AFF"
            android:text="从相册选择照片"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/popup_ios_bg"
            android:gravity="center"
            android:id="@+id/popup_ios_cancel"
            android:textSize="18sp"
            android:textColor="#007AFF"
            android:text="取消"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>